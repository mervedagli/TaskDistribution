@{
}

 
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskDistribution</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskDistribution.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                      
                        <h1 class="card-title text-center mb-3 fw-light fs-5">
                            Görev Dağılımı Giriş @ViewBag.Name
                        </h1>
                        <form  method="post" action="/Login/Index" >
                            <div class="form-group" data-validate="Kullanıcı adınızı giriniz">
                                <label >Kullanıcı Adı</label>
                                <input 
                                       type="text"
                                       class="form-control"
                                       name="User_NM" />
                            </div>
                            <div class="row">
                                <div class="col">
                                    @* <span style="color:red">
                                        {{ error.usernameError }}
                                        </span>*@
                                </div>
                            </div>

                            <div class="form-group" data-validate="Şifre giriniz">
                                <label >Şifre</label>
                                <input 
                                       type="password"
                                       class="form-control"
                                       name="Password_TXT" />
                            </div>
                            <div class="row">
                                <div class="col">
                                    @* <span style="color:red">
                                        {{ error.passwordError }}
                                        </span>*@
                                </div>
                            </div>
                             <button  class="btn btn-primary btn-fill " type="submit"
                                style="float: right;background-color:#00aedb ;border-color: unset;" 
                               >
                            <span>Giriş Yap</span>
                        </button>
                        <span style="color:red">
                            @*  <div> message </div>*@
                        </span>
                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>